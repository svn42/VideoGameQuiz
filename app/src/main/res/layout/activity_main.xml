            <TextView
                style="@style/QuestionHeadline"
                android:text="@string/question1Tag" />

            <View style="@style/BlackLine" />

            <ImageView
                style="@style/Image"
                android:src="@drawable/mostselledever" />

            <View style="@style/BlackLine" />

            <TextView
                style="@style/Question"
                android:text="@string/question1" />

            <View style="@style/BlackLine" />

            <RadioGroup
                android:id="@+id/question1"
                style="@style/RadioGroupStyle">

                <RadioButton
                    android:id="@+id/question1a"
                    style="@style/MatchParentWidthAndHeight"
                    android:text="@string/answerq1a" />

                <View style="@style/DarkGrayLine" />

                <RadioButton
                    android:id="@+id/question1b"
                    style="@style/MatchParentWidthAndHeight"
                    android:text="@string/answerq1b" />

                <View style="@style/DarkGrayLine" />

                <RadioButton
                    android:id="@+id/question1c"
                    style="@style/MatchParentWidthAndHeight"
                    android:text="@string/answerq1c" />

                <View style="@style/DarkGrayLine" />

                <RadioButton
                    android:id="@+id/question1d"
                    style="@style/MatchParentWidthAndHeight"
                    android:text="@string/answerq1d" />

            </RadioGroup>
        </LinearLayout>

