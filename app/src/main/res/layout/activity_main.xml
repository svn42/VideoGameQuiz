        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/marginBig"
            android:onClick="checkAnswers"
            android:text="@string/check" />

        <!-- Summary -->
        <TextView
            android:id="@+id/summaryTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_gray"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/marginSmall"
            android:paddingBottom="@dimen/marginSmall"
            android:text="@string/summary"
            android:textAllCaps="true"
            android:textSize="@dimen/questionTagSize"
            android:textStyle="bold"
            android:visibility="invisible" />

        <View
            android:id="@+id/summaryLine"
            style="@style/BlackLine"
            android:visibility="invisible" />

        <LinearLayout
            android:id="@+id/summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/marginBig"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:paddingLeft="@dimen/marginSmall"
            android:paddingRight="@dimen/marginSmall"
            android:visibility="invisible">

            <TextView
                android:id="@+id/summaryQuestion1"
                style="@style/QuestionSummary" />

            <View style="@style/DarkGrayLine" />

            <TextView
                android:id="@+id/summaryQuestion2"
